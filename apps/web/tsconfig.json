{
  "extends": "@aza8/tsconfig/tsconfig.next",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "./app/*"
      ]
    },
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
