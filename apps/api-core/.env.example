# Ambiente de desenvolvimento (development | test | production)
NODE_ENV=development

# Porta exposta pela API (coordenada com NEXT_PUBLIC_API_URL das webapps)
PORT=3001

# URL de conexão com o Postgres
DATABASE_URL=postgresql://user:password@localhost:5432/aza8

# Segredo usado para assinar tokens (mínimo 32 caracteres)
AUTH_SECRET=change-me-with-32-characters-minimum

# Modo de enforcement de tenancy (warn | strict)
TENANCY_ENFORCEMENT_MODE=warn
